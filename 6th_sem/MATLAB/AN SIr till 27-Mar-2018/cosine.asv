%function y=cosine(x) : Function to calculate cos(x)
function y=cosine(x)
format long;
xrad=x*3.1415926/180;
ccos=1;
pcos=0;
eps=abs(ccos-pcos);
n=2;
sf=-1;
while eps >=1e-16
    pcos=ccos;
    fact=1;
    xp=1;
        for i=1:n
            fact=fact*i;
            xp=xp*xrad;
        end
        ccos=ccos+sf*xp/fact;
        eps=abs(ccos-pcos);
        n=n+2;
        sf=-sf;
end
y=csin;
end
