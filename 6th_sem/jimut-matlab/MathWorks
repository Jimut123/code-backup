%function h=hcf1(a,b) : Function to calculate hcf of 2 numbers
function h=hcf1(a,b)
r=mod(a,b);
while r ~= 0
    a=b;
    b=r;
    r=mod(a,b);
end
h=b;
end
----------------------------------
%function lc=lcm1(a,b) : Function to calculate lcm of 2 numbers
function lc=lcm1(a,b)
h=hcf1(a,b);
lc=a*b/h;
end
----------------------------------
